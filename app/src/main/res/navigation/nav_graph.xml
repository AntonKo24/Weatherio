<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todayFragment">

    <fragment
        android:id="@+id/todayFragment"
        android:name="com.tonyk.android.weatherapp.TodayFragment"
        android:label="TodayFragment"
        tools:layout="@layout/fragment_today" >
        <action
            android:id="@+id/show_forecast"
            app:destination="@id/forecastFragment" />
    </fragment>
    <fragment
        android:id="@+id/forecastFragment"
        android:name="com.tonyk.android.weatherapp.ForecastFragment"
        android:label="ForecastFragment"
        tools:layout="@layout/fragment_forecast"/>
